<%= bootstrap_flash %>

<h1>Offices</h1>

<table id="offices-table" class="table table-striped table-bordered table-hover datatable" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @offices.each do |office| %>
      <tr>
        <td><%= office.name %></td>
        <td>
          <%= link_to 'Edit', edit_office_path(office) %> | 
          <%= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Office', new_office_path, :class => "btn btn-primary" %>
